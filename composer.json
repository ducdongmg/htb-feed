{
    "name": "kawanamiyuu/htb-feed",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Yuu Kawanami",
            "email": "yuu.kawanami@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.2",
        "guzzlehttp/guzzle": "^6.3",
        "psr/http-server-middleware": "^1.0",
        "ray/di": "^2.7",
        "relay/relay": "2.x@dev",
        "symfony/css-selector": "^4.3",
        "symfony/dom-crawler": "^4.3",
        "zendframework/zend-diactoros": "^1.8",
        "zendframework/zend-feed": "^2.12"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Kawanamiyuu\\HtbFeed\\": "src"
        },
        "files": ["src-files/functions.php"]
    },
    "scripts": {
        "check": ["@lint"],
        "lint": [
            "phpcs --standard=PSR12 src",
            "phpstan analyze --no-progress --level=max src"
        ],
        "fmt": "phpcbf --standard=PSR12 src"
    },
    "config": {
        "sort-packages": true
    }
}
